							.webLink("AdvancedSearch").press
							wait Wait5
							
							.webEdit("ClockNumber_Adv").setValue strClockNumberInv
						    wait Wait2
							.webLink("AdvSearch").press
							wait Wait5	
							
							'.webTable("SearchCriteria_CS").assertExist "True" 
							' .webTable("SearchCriteria_CS").assertStatus "Visible"
							
